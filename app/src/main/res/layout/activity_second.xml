<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintCircleRadius="@dimen/page_margin2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_baseline_add_a_photo_24"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/image"
        android:layout_marginTop="@dimen/margin_top">

    </com.google.android.material.imageview.ShapeableImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Photo"
        android:id="@+id/edit_photo"
        android:textStyle="bold"
        android:textColor="@color/purple_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/image">

    </TextView>

    <EditText
        android:id="@+id/name"
        android:text="Jessica"
        android:paddingStart="@dimen/page_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_photo"
        android:layout_marginTop="@dimen/page_margin2"
        android:layout_marginHorizontal="@dimen/margin_top">

    </EditText>

    <EditText
        android:id="@+id/first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Smith"
        android:paddingStart="@dimen/page_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_marginTop="@dimen/page_margin"
        android:layout_marginHorizontal="@dimen/margin_top">

    </EditText>

    <TextView
        android:id="@+id/pr_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Private Information"
        android:textSize="21sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/first_name"
        android:layout_marginStart="@dimen/margin_top"
        android:layout_marginTop="@dimen/page_margin2">

    </TextView>

    <EditText
        android:id="@+id/login_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_baseline_email_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pr_info"
        android:layout_marginTop="@dimen/page_margin2"
        android:layout_marginHorizontal="@dimen/margin_top">

    </EditText>

    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="(720)123-4567"
        android:drawableStart="@drawable/ic_baseline_local_phone_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_second"
        android:layout_marginTop="@dimen/page_margin"
        android:layout_marginHorizontal="@dimen/margin_top">

    </EditText>

    <EditText
        android:id="@+id/password_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phone"
        android:layout_marginTop="@dimen/page_margin"
        android:layout_marginHorizontal="@dimen/margin_top">

    </EditText>



</androidx.constraintlayout.widget.ConstraintLayout>